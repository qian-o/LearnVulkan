		</None>
		<None Update="Shaders\VertexBuffersApplication\frag.spv">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Shaders\VertexBuffersApplication\vert.spv">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Textures\DepthBufferingApplication\texture.jpg">
